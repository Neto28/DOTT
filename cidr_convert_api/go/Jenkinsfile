pipeline {
  agent any
  stages {
    stage('Build') {
      steps {
        echo 'BUILDING'
      }
    }

    stage('SonarCloud') {
      steps {
        echo 'SONARCLOUD STATIC CODE ANALYSIS'
        //testing changes in server 
      }
    }

    stage('Testing') {
      steps {
        warnError(message: 'Failed to Run') {
          sh 'go version'
          dir(path: 'cidr_convert_api/go/') {
            //sh 'goop install'
            withEnv(["GOROOT=${root}", "PATH+GO=${root}/bin:${HOME}/go/bin"]) {
                sh "go get gopkg.in/alecthomas/gometalinter.v1"
                sh "gometalinter.v1 --help"
            }
          }
        }
      }
    }

    stage('Deploy') {
      steps {
        echo 'Test'
      }
    }

  }
  tools {
    go 'go-1.15'
  }
  environment {
    GO111MODULE = 'on'
  }
}
