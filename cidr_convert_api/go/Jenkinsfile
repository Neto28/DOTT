pipeline {
  agent any
  stages {
    stage('Build') {
      steps {
        sh '''echo "Testing Build Phase"
cd cidr_convert_api/go/
'''
      }
    }

    stage('Test') {
      steps {
        sh '''echo "Testing Test Phase"
cd cidr_convert_api/go/

'''
      }
    }

    stage('Deploy') {
      steps {
        sh 'echo "Testing ipv4Validation"'
      }
    }

    stage('SonarCloud') {
      steps {
        sh '''echo "Test"
cd cidr_convert_api/go/

sonar-scanner \\
  -Dsonar.organization=neto28 \\
  -Dsonar.projectKey=Neto28_DOTT \\
  -Dsonar.sources=. \\
  -Dsonar.host.url=https://sonarcloud.io'''
      }
    }

  }
}