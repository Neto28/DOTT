pipeline {
  agent any
  stages {
    stage('Build') {
      steps {
        echo 'BUILDING'
      }
    }

    stage('SonarCloud') {
      steps {
        echo 'SONARCLOUD STATIC CODE ANALYSIS'
      }
    }

    stage('Testing') {
      steps {
        warnError(message: 'Failed to Run') {
          sh 'go version'
          sh 'sonar-scanner'
          dir(path: 'cidr_convert_api/go/')
        }

      }
    }

    stage('Deploy') {
      steps {
        echo 'Test'
      }
    }

  }
}