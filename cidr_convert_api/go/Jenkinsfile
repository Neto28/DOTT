pipeline {
  agent any
  stages {
    stage('Build') {
      steps {
        sh '''echo "BUILDING"
'''
      }
    }

    stage('SonarCloud') {
      steps {
        sh '''echo "STATIC CODE ANALYSIS"

sonar-scanner

'''
      }
    }

    stage('Testing') {
      steps {
        warnError(message: 'Failed to Run') {
          sh '''cd cidr_convert_api/go/

golint api.go convert.go convert_test.go

go test'''
        }

        sh 'echo "UNIT TESTING"'
      }
    }

    stage('Deploy') {
      steps {
        sh '''echo "Test"

'''
      }
    }

  }
  environment {
    build = 'false'
  }
}