pipeline {
  agent any
  stages {
    stage('Build') {
      steps {
        echo 'BUILDING'
      }
    }

    stage('SonarCloud') {
      steps {
        echo 'SONARCLOUD STATIC CODE ANALYSIS'
        //testing changes in server 
      }
    }

    stage('Testing') {
      steps {
        warnError(message: 'Failed to Run') {
          sh 'go version'
          dir(path: 'cidr_convert_api/go/') {
            sh '''go get github.com/karmakaze/goop \
    && go get github.com/gorilla/mux \
    && go get github.com/stretchr/testify/assert \
    && goop install'''
          }
        }
      }
    }

    stage('Deploy') {
      steps {
        echo 'Test'
      }
    }
  }
}
